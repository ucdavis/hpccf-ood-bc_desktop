---
batch_connect:
  template: vnc
  script_wrapper: |
    source /etc/profile.d/modules.sh
    source /etc/profile.d/puppet-agent.sh
    module load conda/websockify turbovnc
    export WEBSOCKIFY_CMD="websockify"
    export PATH=$PATH:"/cvmfs/hpc.ucdavis.edu/sw/wrappers/turbovnc"
    turbovnc-ood
    %s
script:
  native:
    - "--cpus-per-task"
    - "<%= cores %>"
    - "--mem"
    - "<%= mem %>G"
    <%- if gpu_num.to_i > 0 -%>
    - "--gres"
    - "gpu:<%= gpu_num.to_s %>"
    <%- end -%>
